        <h1 class="page-title"> Resultados da pesquisa </h1>
     
    <% if(products.length > 0){%>
    <section class="products-container">
            <% products.forEach(el => { %>

                <div class="product-box">
                    <div class="imgBx">
                        <img src="/assets/images/products/<%- el.images[0] %>.png" alt="">
                    </div>
                    <h3><%- el.name %></h3>
                    <p>R$ <%- String(el.value.toFixed(2)).replace('.', ',') %></p>
                    <button class="buy"><a class="a-white" href="/product/<%- el.id %>">Compre</a></button>
                </div>
            <% }) %>

            
        </section> 
        <div class="switch-page">
            <div>
                <a class="switch-link" href="/pesquisa/?search=<%- searchParam %>&page=1">1</a>
                <a class="switch-link"href="/pesquisa/?search=<%- searchParam %>&page=2">2</a>
                <a class="switch-link"href="/pesquisa/?search=<%- searchParam %>&page=3"%>>3</a>
                <a class="switch-link"href="/pesquisa/?search=<%- searchParam %>&page=4">4</a>
                <span>...</span>
                <a class="switch-link"href="/pesquisa/?search=<%- searchParam %>&page=8">8</a>
                <a href="#" class='arrow nextPage'>Próxima
                <img src="/assets/images/arrow.svg" alt="Seta">
                </a></div>
        </div>
        <% } else { %>

            <div class="not-products">
                <h3>Lamentamos, nenhum produto encontrado com esse critério de pesquisa.</h3>
                <p>Tente novamente com outro termo para busca...</p>
            </div>

        <% } %>
        </div>