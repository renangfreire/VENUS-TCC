<div class="login-box">
  <h2>Faça Login</h2>
  <form action="#" method="POST">
    <div class="user-box">
      <label class="no-event" for="email">E-mail</label>
      <input type="text" id="email" name="email" required />
    </div>
    <div class="user-box">
      <label class="no-event" for="password">Senha</label>
      <input type="password" id="password" name="password" required />
      <a href="/popup" id="forgot-password">Esqueceu a senha&#63;</a>
    </div>
    <button href="#" type="submit" class="text" class="text-block" id="enter">
      ENTRAR
    </button>
    <div class="change-box">
      <div class="change">Não tem uma conta&#63;</div>
      <a class="signup-a" href="/cadastro" class="change">Cadastre-se</a>
    </div>
  </form>
</div>
