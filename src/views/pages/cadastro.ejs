<div class="login-box">
  <h2>Cadastre-se</h2>
  <form action="/cadastro" method="POST">
    <div class="user-box">
      <label>Nome</label>
      <input type="text" id="name" name="name" required />
    </div>

    <div class="user-box">
      <label class="no-event">E-mail</label>
      <input type="email" id="email" name="email" required />
    </div>
    <div class="user-box">
      <label class="no-event">Sexo</label>
      <div class="divsexo">
        <label class="input_block" for="sex_mas">
          <input type="radio" name="sexo" value="masculino" required />
          Masculino
        </label>

        <label class="input_block" for="sex_fem">
          <input type="radio" name="sexo" value="feminino" required />
          Feminino
        </label>

        <label class="input_block" for="sex_nao_inf">
          <input type="radio" name="sexo" value="nao-informar" required/>
          Prefiro n√£o informar
        </label>
      </div>
    </div>
    <div class="user-box">
      <label class="no-event">CPF</label>
      <input type="text" id="cpfInput" name="cpf" required maxlength="14" />
    </div>
    <div class="user-box">
      <label class="no-event">Senha</label>
      <input type="password" id="passwordInput" name="password" required />
    </div>
    <div class="user-box">
      <label class="no-event">Confirmar Senha</label>
      <input type="password" id="confirmPasswordInput" name="confirmPassword" required />
    </div>
    <button type="submit" class="text" class="text-block" id="btnSend">
      CRIAR
    </button>
    <div class="change-box">
      <div class="change">Possui uma conta&#63;</div>
      <a href="/login" class="change">Fazer login</a>
    </div>
  </form>
</div>
